rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Mengecek apakah user terautentikasi
    function isSignedIn() {
      return request.auth != null;
    }

    // Cek admin
    function isAdmin() {
      return isSignedIn() && request.auth.token.role == 'admin';
    }

    // Cek kepemilikan dokumen
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Fungsi helper untuk cek apakah ujian sedang dibuka
    function isExamOpen(examsId) {
      let examData = get(/databases/$(database)/documents/exams/$(examsId)).data;
      return examData.status != "draft" && examData.status != "closed";
    }

    // Global: Analytics & Dashboards
    match /analytics/{document=**} {
      allow read: if isAdmin();
      allow write: if false; 
    }

    match /analytics_by_school/{schoolId} {
      allow read: if isSignedIn();
    }

    // Rules for users collection
    match /users/{userId} {
      allow read: if isSignedIn();

      allow create: if isSignedIn();

      // Allow users to create, and update their own data
      allow update: if isAdmin() || (isOwner(userId) && request.resource.data.role == resource.data.role)

      // Allow delete by admin
      allow delete: if isAdmin();

      match /exams/{examsId} {
        allow read, write: if isAdmin() || isOwner(userId);
      }
    }

    // Master Data (Read-only for users)
    match /provinces/{id} { allow read: if isSignedIn(); }
    match /regencies/{id} { allow read: if isSignedIn(); }
    match /districts/{id} { allow read: if isSignedIn(); }

    match /schools/{schoolId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Error Reports
    match /error_reports/{reportId} {
      allow create: if request.app != null || isSignedIn();
      allow read, update, delete: if isAdmin();
    }

    // Rules for Exams and sub-collections (Grades, Subjects)
    match /exams/{examsId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();

    // Recursive match untuk grades dan subjects agar lebih ringkas
      match /grades/{gradesId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();

        match /subjects/{subjectsId} {
          allow read: if isSignedIn();
          allow write: if isAdmin();
        }
      }

      match /stats_per_school/{schoolId}/perGradeSubject/{key} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
      }

      match /answers/{answerId} {
        allow read: if isSignedIn();

        // ðŸ”¥ Tambahkan pengecekan isExamOpen() untuk Create
        allow create: if isAdmin() || (
        request.resource.data.uploadedBy == request.auth.uid && 
        isExamOpen(examsId)
        );

        allow update: if isAdmin() || (
        resource.data.uploadedBy == request.auth.uid && 
        request.resource.data.uploadedBy == request.auth.uid &&
        isExamOpen(examsId)
        );
        allow delete: if false;
      }
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}