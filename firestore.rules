rules_version = '2';

service cloud.firestore {
	match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null && 
            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('role', 'teacher') == 'admin';
    }

    match /analytics/dahsboard_admin {
      allow read: if request.auth != null;

      match /user_growth {
        allow read: if request.auth != null;
      }
    }

    // Rules for users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      
      // Allow users to create, and update their own data
      allow update, create: if (
        request.auth != null && (
          isAdmin() ||

          request.auth.uid == userId && !('role' in request.resource.affectedKeys())
        )
      )
      
      // Allow delete by admin
      allow delete: if request.auth != null && isAdmin();
      
      match /exams/{examsId} {
        // Read: Bisa dilihat oleh pemilik data (userId) ATAU Admin.
        allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
        
        // Write: Hanya pemilik data (userId) ATAU Admin yang bisa create/update.
        allow create, update: if request.auth != null && (request.auth.uid == userId || isAdmin());
    
        // Delete: Sebaiknya dibatasi (Opsional: Admin only atau User juga bisa)
        allow delete: if request.auth != null && (request.auth.uid == userId || isAdmin());
      }
    }
    
    // Rules for regional and school data (Read-only for users)
    match /provinces/{id} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    match /regencies/{id} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    match /districts/{id} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    match /schools/{id} {
      allow read: if request.auth != null;
      allow update, create: if request.auth != null && isAdmin();
      allow delete: if request.auth != null && isAdmin();
    }

    // Rules for Error Reports (App Check enforced)
    match /error_reports/{reportId} {
      allow create: if request.app != null || request.auth != null;
      allow read: if isAdmin();
      allow update, delete: if isAdmin();
    }

    // Rules for Exams and sub-collections (Grades, Subjects)
    match /exams/{examsId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isAdmin();

      // Fungsi helper untuk cek apakah ujian sedang dibuka
      function isExamOpen() {
        let examData = get(/databases/$(database)/documents/exams/$(examsId)).data;
        return examData.status != "draft" && examData.status != "closed";
      }
      
      // Allow access to grades
      match /grades/{gradesId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && isAdmin();

        // Allow access to subjects
        match /subjects/{subjectsId} {
          allow read: if request.auth != null;
          allow write: if request.auth != null && isAdmin();
        }
      }

      match /answers/{answerId} {
        allow read: if request.auth != null;
        
        // ðŸ”¥ Tambahkan pengecekan isExamOpen() untuk Create
        allow create: if request.auth != null && (
          isAdmin() || 
          (request.auth.uid == request.resource.data.uploadedBy && isExamOpen())
        );

        allow update: if request.auth != null && (
          isAdmin() || 
          (request.auth.uid == request.resource.data.uploadedBy && 
          request.auth.uid == resource.data.uploadedBy && isExamOpen())
        );

        allow delete: if false;
      }
    }

    // Rules for Analytics (Dashboard)
    match /analytics/{document=**} {
      allow read: if isAdmin();
      allow write: if false; // Only updated via Cloud Functions
    }
    
    // Default deny for all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}